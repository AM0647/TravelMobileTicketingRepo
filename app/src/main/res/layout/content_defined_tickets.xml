<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_defined_tickets"
    tools:context="com.example.smagionas.redbustickets.DefinedTicketsActivity">



<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:background="@color/colorPrimary"
>


    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="10dp"
        android:columnCount="3"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/defined_tickets_numpad_code_textfield"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Τιμή :"
            android:textSize="25sp"
            android:textColor="@color/TextGray"/>

        <TextView
            android:id="@+id/defined_tickets_numpad_screen"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:layout_rowWeight="1"
            android:maxHeight="25dp"
            android:maxWidth="100dp"
            android:background="@color/White"
            android:paddingLeft="10dp"
            android:layout_marginRight="4dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:elevation="8dp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="OnButtonPressed_1"
            android:text="1"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_marginLeft="-4dp"
            android:onClick="OnButtonPressed_2"
            android:text="2"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_marginLeft="-4dp"
            android:onClick="OnButtonPressed_3"
            android:text="3"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_4"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_marginTop="-8dp"
            android:onClick="OnButtonPressed_4"
            android:text="4"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_5"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-8dp"
            android:onClick="OnButtonPressed_5"
            android:text="5"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_6"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-8dp"
            android:onClick="OnButtonPressed_6"
            android:text="6"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_7"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_marginTop="-8dp"
            android:onClick="OnButtonPressed_7"
            android:text="7"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_8"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-8dp"
            android:onClick="OnButtonPressed_8"
            android:text="8"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_9"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-8dp"
            android:onClick="OnButtonPressed_9"
            android:text="9"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_comma"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_marginTop="-8dp"
            android:onClick="OnButtonPressed_comma"
            android:text="."
            android:textSize="35sp"/>

        <Button
            android:id="@+id/defined_tickets_numpad_button_0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-8dp"
            android:onClick="OnButtonPressed_0"
            android:text="0"
            android:textSize="35sp"/>

        <ImageButton
            android:id="@+id/defined_tickets_numpad_button_clear"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:src="@mipmap/ic_clear_black"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-8dp"
            android:onClick="OnButtonPressed_clear"
            android:elevation="3dp"/>


    </GridLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="19dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <Button
                android:id="@+id/normal_ticket_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:maxHeight="130dp"
                android:minWidth="100dp"
                android:text="Κανονικο"
                android:textAlignment="center"
                android:textSize="12sp"
                android:backgroundTint="@color/colorYellow2"
                android:onClick="OnNormalTicketButtonPressed"/>

            <Button
                android:id="@+id/half_ticket_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:maxHeight="130dp"
                android:minWidth="100dp"
                android:text="Μισο"
                android:textAlignment="center"
                android:textSize="12sp"
                android:backgroundTint="@color/colorYellow2"
                android:onClick="OnHalfTicketButtonPressed"/>

            <Button
                android:id="@+id/student_50percent_ticket_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:maxHeight="130dp"
                android:minWidth="100dp"
                android:text="Φοιτητικο  50%"
                android:textAlignment="center"
                android:textSize="12sp"
                android:backgroundTint="@color/colorYellow2"
                android:onClick="OnStudent50percentTicketButtonPressed"/>

            <Button
                android:id="@+id/student_25percent_ticket_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:maxHeight="130dp"
                android:minWidth="100dp"
                android:text="Φοιτητικο  25%"
                android:textAlignment="center"
                android:textSize="12sp"
                android:backgroundTint="@color/colorYellow2"
                android:onClick="OnStudent25percentTicketButtonPressed"/>

            <Button
                android:id="@+id/military_15percent_ticket_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:maxHeight="130dp"
                android:minWidth="100dp"
                android:text="Στρατιωτικο  15%"
                android:textAlignment="center"
                android:textSize="11sp"
                android:backgroundTint="@color/colorYellow2"
                android:onClick="OnMilitary15percentTicketButtonPressed"/>

            <Button
                android:id="@+id/package_ticket_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:maxHeight="130dp"
                android:minWidth="100dp"
                android:text="Δεμα"
                android:textAlignment="center"
                android:textSize="12sp"
                android:backgroundTint="@color/colorYellow2"
                android:onClick="OnPackageTicketButtonPressed"/>

            <Button
                android:id="@+id/with_return_ticket_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:maxHeight="130dp"
                android:minWidth="100dp"
                android:text="Με επιστροφη"
                android:textAlignment="center"
                android:textSize="12sp"
                android:backgroundTint="@color/colorYellow2"
                android:onClick="OnWithReturnTicketButtonPressed"/>

            <Button
                android:id="@+id/with_return_25percent_ticket_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:maxHeight="130dp"
                android:minWidth="100dp"
                android:text="Με επιστροφη 25%"
                android:textAlignment="center"
                android:textSize="12sp"
                android:backgroundTint="@color/colorYellow2"
                android:onClick="OnWithReturn25percentTicketButtonPressed"/>


        </LinearLayout>

    </ScrollView>




</LinearLayout>

</FrameLayout>

