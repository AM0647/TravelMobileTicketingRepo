<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/colorPrimary"
    tools:context="com.example.smagionas.redbustickets.BalanceQuestionActivity"
    tools:showIn="@layout/app_bar_balance_question">


    <ImageView
        android:id="@+id/setup_logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_above="@+id/MiddlePlaceholder"
        android:layout_marginBottom="130dp"
        android:src="@drawable/applogo_white"/>



    <TextView
        android:id="@+id/TopTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Υπόλοιπο στον server"
        android:textSize="16sp"
        android:textColor="@color/TextGray"
        android:layout_above="@+id/MiddleTextView"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/TopPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/MiddlePlaceholder"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/TopTextView_screen"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/TopPlaceholder"
        android:layout_marginLeft="15dp"
        android:layout_above="@+id/MiddleTextView_screen"
        android:layout_marginBottom="40dp"
        android:background="@color/White"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:elevation="5dp"/>

    <TextView
        android:id="@+id/MiddleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Μη Ενημερωμένα Εισιτήρια"
        android:textSize="16sp"
        android:textColor="@color/TextGray"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/MiddlePlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/MiddleTextView_screen"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/MiddlePlaceholder"
        android:layout_marginLeft="15dp"
        android:background="@color/White"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:elevation="5dp"/>

    <TextView
        android:id="@+id/BottomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Σύνολο"
        android:textSize="16sp"
        android:textColor="@color/TextGray"
        android:layout_below="@+id/MiddleTextView"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/BottomPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MiddlePlaceholder"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/BottomTextView_screen"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/BottomPlaceholder"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/MiddleTextView_screen"
        android:layout_marginTop="40dp"
        android:background="@color/White"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:elevation="5dp"/>



    <Button
        android:id="@+id/non_updated_tickets_server_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BottomPlaceholder"
        android:layout_marginTop="124dp"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="     Ερώτηση Υπολοίπου"
        android:textAllCaps="false"
        android:drawableLeft="@mipmap/ic_sync"
        android:textSize="18sp"/>





</RelativeLayout>

